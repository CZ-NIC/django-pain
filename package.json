{
  "name": "django-pain",
  "version": "0.1.0",
  "description": "JavaScript for django-pain",
  "author": "Jan Mus√≠lek <jan.musilek@nic.cz>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "check-css": "stylelint django_pain/**/*.css",
    "check-js": "eslint django_pain/tests-js django_pain/static/django_pain/js/es6",
    "build": "webpack",
    "watch": "webpack --watch --mode development",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ajv": "^6.10.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^25.0.0",
    "babel-loader": "^8.0.0",
    "eslint": "^6.5.0",
    "eslint-plugin-jest": "^22.3.0",
    "fetch-mock": "^7",
    "flush-promises": "^1.0.2",
    "jest": "^25.0.0",
    "jest-environment-jsdom": "^24.9.0",
    "jest-environment-jsdom-global": "^1.2.0",
    "node-fetch": "^2.2.0",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom-global",
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "django_pain/static/django_pain/js/es6/**/*.js"
    ],
    "coverageDirectory": "coverage-js",
    "coverageReporters": [
      "text",
      "text-summary",
      "json-summary"
    ]
  }
}
